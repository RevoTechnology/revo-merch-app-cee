<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="windowActionBarOverlay">false</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:fitsSystemWindows">false</item>

    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/ic_bg</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="sublimePickerStyle">@style/DateTimePickerAccent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="KeyboardButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/selector_keyboard_button</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/gray0</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TextInputWidgetStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BottomButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="CheckBoxTheme" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/gray</item>
    </style>

    <style name="TextInputLayoutStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">70dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="TextInputLayoutStyle.Constraint">
        <item name="android:layout_width">0dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="TextInputLayoutOutlineStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/outline_input_box_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/outline_input_box_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/outline_input_box_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/outline_input_box_corner_radius</item>
    </style>

    <style name="SumInputLayoutStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/steel</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextEditStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:background">@drawable/edit_bg_selector</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="ConfidenceStyle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/ic_error</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="DateTimePickerAccent" parent="SublimePickerStyleLight">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">#727272</item>
        <item name="android:textColorPrimaryInverse">@android:color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AgreementItem">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">50dp</item>
    </style>

    <style name="AgreementCheck">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:textColor">@color/steel</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AgreementName">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">13dp</item>
        <item name="android:layout_marginBottom">13dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/steel</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AgreementArrow">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:src">@drawable/ic_chevron_right</item>
        <item name="android:tint">@color/gray</item>
    </style>

    <style name="AgreementDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:background">@color/steel</item>
        <item name="android:alpha">0.3</item>
    </style>

    <style name="MessageContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">4dp</item>
    </style>

    <style name="MessageText">
        <item name="android:background">@drawable/bg_chat_user</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">64dp</item>
    </style>

    <style name="MessageSupportText" parent="MessageText">
        <item name="android:layout_marginEnd">64dp</item>
        <item name="android:background">@drawable/bg_chat_support</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">12dp</item>
    </style>

    <style name="MessageTime">
        <item name="android:background">@drawable/bg_chat_user</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textColor">@color/chat_message_time</item>
    </style>


    <style name="BarCode">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_margin">0dp</item>
    </style>

</resources>
