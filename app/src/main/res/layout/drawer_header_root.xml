<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="172dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@mipmap/img_menu">

    <TextView
        android:id="@+id/mainDrawerUserStore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        android:lines="1"
        android:maxLines="1"
        android:ellipsize="end"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="19sp"
        tools:text="RUPTLY | RL1036"/>

    <TextView
        android:id="@+id/mainDrawerUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_above="@+id/mainDrawerUserStore"
        android:textSize="14sp"
        android:textColor="@color/white"
        tools:text="Mateusz WiÅ›niewski"/>

    <FrameLayout
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="36dp"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/mainDrawerUserName"
        tools:ignore="RtlHardcoded">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/mainDrawerAvatar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:src="@drawable/avatar_bg"
            android:scaleType="fitXY"
            tools:ignore="RtlHardcoded" />

    </FrameLayout>

</RelativeLayout>