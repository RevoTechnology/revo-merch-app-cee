<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/searchCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="@string/search_hint"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/searchLoginLayout"
                    style="@style/TextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_marginTop="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/searchLogin"
                        style="@style/TextEditStyle"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:nextFocusDown="@id/searchPassport"
                        android:maxLength="50"
                        android:hint="@string/search_phone"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/searchPassportLayout"
                    style="@style/TextInputLayoutStyle"
                    android:layout_width="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/searchPassport"
                        style="@style/TextEditStyle"
                        android:inputType="number"
                        android:maxLength="11"
                        android:imeOptions="actionNext"
                        android:nextFocusDown="@id/searchContract"
                        android:hint="@string/search_passport"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/searchContractLayout"
                    style="@style/TextInputLayoutStyle"
                    android:layout_width="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/searchContract"
                        style="@style/TextEditStyle"
                        android:inputType="number"
                        android:imeOptions="actionDone"
                        android:maxLength="9"
                        android:hint="@string/search_order"/>

                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/searchButton"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="12dp"
                    android:textColor="@color/white"
                    android:text="@string/search_button"
                    android:enabled="false"
                    app:backgroundTint="@color/search_button_bg"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/searchList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>