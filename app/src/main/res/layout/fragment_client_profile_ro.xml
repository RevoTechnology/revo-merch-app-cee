<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:id="@+id/profileContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/profileNextLayout"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/profileFirstNameLayout"
                    style="@style/TextInputLayoutStyle"
                    android:layout_width="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/profileFirstName"
                        style="@style/TextEditStyle"
                        android:hint="@string/profile_first_name"
                        android:imeOptions="actionNext"
                        android:inputType="textPersonName|textCapSentences"
                        android:maxLength="40"
                        android:nextFocusDown="@+id/profileLastName" />

                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/profileFirstError"
                    style="@style/ConfidenceStyle"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/profileLastNameLayout"
                    style="@style/TextInputLayoutStyle"
                    android:layout_width="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/profileLastName"
                        style="@style/TextEditStyle"
                        android:hint="@string/profile_last_name"
                        android:imeOptions="actionNext"
                        android:inputType="textPersonName|textCapSentences"
                        android:maxLength="40"
                        android:nextFocusDown="@id/profileId" />

                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/profileLastError"
                    style="@style/ConfidenceStyle"
                    android:visibility="gone" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/profilePeselLayout"
                    style="@style/TextInputLayoutStyle"
                    android:layout_width="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/profileCnp"
                        style="@style/TextEditStyle"
                        android:hint="@string/profile_pesel"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="13"
                        android:nextFocusDown="@+id/profileBulletin" />

                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/profilePeselError"
                    style="@style/ConfidenceStyle"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/profileBulletinLayout"
                    style="@style/TextInputLayoutStyle"
                    android:layout_width="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/profileBulletin"
                        style="@style/TextEditStyle"
                        android:hint="@string/profile_bulletin"
                        android:imeOptions="actionNext"
                        android:maxLength="8"
                        android:nextFocusDown="@+id/profileAddress" />

                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/profileBulletinError"
                    style="@style/ConfidenceStyle"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/profileEmailLayout"
                    style="@style/TextInputLayoutStyle"
                    android:layout_width="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/profileEmail"
                        style="@style/TextEditStyle"
                        android:hint="@string/profile_email"
                        android:imeOptions="actionDone"
                        android:inputType="textEmailAddress" />

                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/profileEmailError"
                    style="@style/ConfidenceStyle"
                    android:visibility="gone" />

            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/profileWarningSwh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="24dp"
                    android:theme="@style/SwitchTheme"
                    android:visibility="gone"
                    tools:checked="true" />

                <TextView
                    android:id="@+id/profileDemo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/demo_mode"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </FrameLayout>

        </LinearLayout>

    </ScrollView>

    <FrameLayout
        android:id="@+id/profileNextLayout"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <pl.revo.merchant.widget.StepButtonWidget
            android:id="@+id/profileNextBtn"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:alpha="0.5"
            android:text="@string/profile_next"
            app:step="2"
            app:steps="5" />

    </FrameLayout>

</RelativeLayout>

