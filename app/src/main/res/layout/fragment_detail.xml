<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <androidx.cardview.widget.CardView
        android:id="@+id/detailCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/detailClientImg"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_person"
                android:tint="@color/colorAccent"
                android:layout_marginTop="21dp"
                android:layout_marginStart="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/detailClient"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/detailClientImg"
                app:layout_constraintTop_toTopOf="@+id/detailClientImg"
                app:layout_constraintBottom_toBottomOf="@+id/detailClientImg"
                tools:text="Bartek Jakub Kowalski"/>

            <TextView
                android:id="@+id/detailPhoneTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:layout_marginStart="16dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="@string/detail_phone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detailClientImg"/>

            <TextView
                android:id="@+id/detailPhone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="end"
                android:textSize="16sp"
                android:textColor="@color/steel"
                app:layout_constraintTop_toTopOf="@+id/detailPhoneTitle"
                app:layout_constraintStart_toEndOf="@+id/detailPhoneTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/detailPhoneTitle"
                tools:text="+44 (912) 111-22-33"/>

            <View
                android:id="@+id/detailSeparator1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="14dp"
                android:layout_marginStart="16dp"
                android:background="@color/steel"
                android:alpha="0.3"
                app:layout_constraintTop_toBottomOf="@+id/detailPhoneTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/detailTotalSumTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="14dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="@string/detail_total"
                app:layout_constraintTop_toBottomOf="@+id/detailSeparator1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/detailTotalSum"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/detailTotalSum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="end"
                android:textSize="16sp"
                android:textColor="@color/steel"
                app:layout_constraintTop_toTopOf="@+id/detailTotalSumTitle"
                app:layout_constraintStart_toEndOf="@+id/detailTotalSumTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/detailTotalSumTitle"
                tools:text="230,00 zł"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/detailReturnTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="@string/detail_return_sum"
        app:layout_constraintTop_toBottomOf="@+id/detailCard"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/detailFullReturn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:theme="@style/CheckBoxTheme"
        app:layout_constraintBottom_toBottomOf="@+id/detailReturnTitle"
        app:layout_constraintEnd_toStartOf="@+id/detailFullReturnText"
        app:layout_constraintTop_toTopOf="@+id/detailReturnTitle"
        tools:ignore="RtlHardcoded,RtlSymmetry" />

    <TextView
        android:id="@+id/detailFullReturnText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="@string/detail_return_full"
        android:textColor="@color/steel"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/detailFullReturn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/detailFullReturn" />

    <LinearLayout
        android:id="@+id/detailReturnCard"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/return_sum_bg"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:baselineAligned="false"
        app:layout_constraintTop_toBottomOf="@+id/detailReturnTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            tools:ignore="UselessParent">

            <EditText
                android:id="@+id/detailReturnSum"
                style="@style/TextEditStyle"
                android:hint="@string/purchase_sum"
                android:background="@color/transparent"
                android:inputType="numberDecimal"
                android:digits="0123456789,."
                android:textColor="@color/transparent"
                android:imeOptions="actionDone"
                tools:ignore="Autofill" />

            <TextView
                android:id="@+id/detailReturnText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_alignTop="@+id/detailReturnSum"
                android:layout_alignBottom="@+id/detailReturnSum"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="16sp"/>

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/detailSumError"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:textColor="@color/red"
        android:textSize="12sp"
        android:text="@string/detail_return_sum_error"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/detailReturnCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/detailBottomCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/detailSumError"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/detailNextBtn">

        <!--<TextView
            android:id="@+id/detailAmountTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="14dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="@string/detail_amount"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/detailSeparator2"/>

        <TextView
            android:id="@+id/detailAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="end"
            android:textColor="@color/steel"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@+id/detailAmountTitle"
            app:layout_constraintStart_toEndOf="@+id/detailAmountTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/detailAmountTitle"
            tools:text="45,00 zł"/>

        <View
            android:id="@+id/detailSeparator2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="14dp"
            android:background="@color/steel"
            android:alpha="0.3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/detailRemainingSumTitle"/>-->

        <TextView
            android:id="@+id/detailRemainingSumTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16sp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="@string/detail_remaining_sum"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/detailRemainingSum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:gravity="end"
            android:textColor="@color/steel"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@+id/detailRemainingSumTitle"
            app:layout_constraintStart_toEndOf="@+id/detailRemainingSumTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/detailRemainingSumTitle"
            tools:text="185,00 zł"/>

        <View
            android:id="@+id/detailSeparator3"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/steel"
            android:alpha="0.3"
            app:layout_constraintTop_toBottomOf="@+id/detailRemainingSumTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <merchant.mokka.widget.StepButtonWidget
        android:id="@+id/detailNextBtn"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:alpha="0.5"
        android:text="@string/detail_next"
        app:step="1"
        app:steps="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>