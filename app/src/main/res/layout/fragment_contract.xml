<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contractScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/contractContentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@string/font_medium"
            android:text="@string/contract_conditions"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/contract_sum"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/contractRuSum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/steel"
                android:textSize="16sp"
                tools:text="5 000 руб." />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="13sp"
            android:layout_marginEnd="16dp"
            android:alpha="0.3"
            android:background="@color/steel" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/contract_over"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/contractRuOver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/steel"
                android:textSize="16sp"
                tools:text="0 руб." />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="13sp"
            android:layout_marginEnd="16dp"
            android:alpha="0.3"
            android:background="@color/steel" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/contract_pay_count"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/contractRuPayCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/steel"
                android:textSize="16sp"
                tools:text="6" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="13sp"
            android:layout_marginEnd="16dp"
            android:alpha="0.3"
            android:background="@color/steel" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/contract_pay_month"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/contractRuPayMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/steel"
                android:textSize="16sp"
                tools:text="833,34 руб." />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="13sp"
            android:alpha="0.3"
            android:background="@color/steel" />

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@drawable/gradient_divider" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/contractDocuments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/adminBgInfoView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_16dp"
            android:layout_marginVertical="@dimen/margin_8dp"
            android:text="@string/contract_admin_info"
            android:visibility="gone" />

        <View
            android:id="@+id/contractDivider"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@drawable/gradient_divider" />

        <TextView
            android:id="@+id/additionalTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/contract_hint"
            android:textColor="@color/black"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@string/font_medium"
            android:text="@string/contract_hint"
            android:textColor="@color/black"
            android:textSize="20sp" />


        <LinearLayout
            android:id="@+id/contractCode"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:orientation="horizontal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:alpha="0.3"
            android:background="@color/steel" />

        <LinearLayout
            android:id="@+id/contractTimerInfo"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/verify_time_info"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/contractTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="22sp"
                tools:text="0:29" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/contractSendCodeAgain"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/verify_not_code"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="@string/verify_send_again"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                tools:ignore="RtlHardcoded" />

        </LinearLayout>

        <merchant.mokka.widget.KeyboardWidget
            android:id="@+id/contractKeyboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>