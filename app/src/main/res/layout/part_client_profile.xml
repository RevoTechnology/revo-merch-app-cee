<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:id="@+id/profileContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/profileNextLayout"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/profileFirstNameLayout"
                    style="@style/TextInputLayoutStyle"
                    android:layout_width="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/profileFirstName"
                        style="@style/TextEditStyle"
                        android:hint="@string/profile_first_name"
                        android:imeOptions="actionNext"
                        android:inputType="textPersonName|textCapSentences"
                        android:maxLength="40"
                        android:nextFocusDown="@+id/profileLastName" />

                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/profileFirstError"
                    style="@style/ConfidenceStyle"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/patronymicNameLayout"
                    style="@style/TextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/patronymicName"
                        style="@style/TextEditStyle"
                        android:hint="@string/profile_middle_name"
                        android:imeOptions="actionNext"
                        android:inputType="textPersonName|textCapSentences"
                        android:maxLength="40"
                        android:nextFocusDown="@+id/profileLastName" />

                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/patronymicError"
                    style="@style/ConfidenceStyle"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/profileLastNameLayout"
                    style="@style/TextInputLayoutStyle"
                    android:layout_width="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/profileLastName"
                        style="@style/TextEditStyle"
                        android:hint="@string/profile_last_name"
                        android:imeOptions="actionNext"
                        android:inputType="textPersonName|textCapSentences"
                        android:maxLength="40"
                        android:nextFocusDown="@id/profileId" />

                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/profileLastError"
                    style="@style/ConfidenceStyle"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/profileIdLayout"
                    style="@style/TextInputLayoutStyle"
                    android:layout_width="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/profileId"
                        style="@style/TextEditStyle"
                        android:hint="@string/profile_id"
                        android:imeOptions="actionNext"
                        android:inputType="textCapCharacters"
                        android:maxLength="9"
                        android:nextFocusDown="@+id/profileExpiryDate" />

                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/profileIdError"
                    style="@style/ConfidenceStyle"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/profilePeselLayout"
                    style="@style/TextInputLayoutStyle"
                    android:layout_width="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/profilePesel"
                        style="@style/TextEditStyle"
                        android:hint="@string/profile_pesel"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="11"
                        android:nextFocusDown="@+id/profileAddress" />

                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/profilePeselError"
                    style="@style/ConfidenceStyle"
                    android:visibility="gone" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/gradient_divider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/profilePostalCodeLayout"
                    style="@style/TextInputLayoutStyle"
                    android:layout_width="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/profilePostalCode"
                        style="@style/TextEditStyle"
                        android:hint="@string/profile_postal_code"
                        android:imeOptions="actionNext"
                        android:inputType="phone"
                        android:nextFocusDown="@id/profileCity" />

                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/profilePostalCodeError"
                    style="@style/ConfidenceStyle"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/profileCityLayout"
                    style="@style/TextInputLayoutStyle"
                    android:layout_width="match_parent">

                    <AutoCompleteTextView
                        android:id="@+id/profileCity"
                        style="@style/TextEditStyle"
                        android:hint="@string/profile_city"
                        android:imeOptions="actionNext"
                        android:inputType="textCapSentences"
                        android:maxLength="50"
                        android:nextFocusDown="@id/profileStreet" />

                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/profileCityError"
                    style="@style/ConfidenceStyle"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/profileStreetLayout"
                    style="@style/TextInputLayoutStyle"
                    android:layout_width="match_parent">

                    <AutoCompleteTextView
                        android:id="@+id/profileStreet"
                        style="@style/TextEditStyle"
                        android:hint="@string/profile_street"
                        android:imeOptions="actionNext"
                        android:inputType="textCapSentences"
                        android:maxLength="100"
                        android:nextFocusDown="@id/profileHouse" />

                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/profileStreetError"
                    style="@style/ConfidenceStyle"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/profileHouseLayout"
                    style="@style/TextInputLayoutStyle"
                    android:layout_width="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/profileHouse"
                        style="@style/TextEditStyle"
                        android:hint="@string/profile_house"
                        android:imeOptions="actionNext"
                        android:inputType="textPostalAddress"
                        android:maxLength="5"
                        android:nextFocusDown="@id/profileFlat" />

                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/profileHouseError"
                    style="@style/ConfidenceStyle"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/profileFlatLayout"
                    style="@style/TextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/profileFlat"
                        style="@style/TextEditStyle"
                        android:hint="@string/profile_flat"
                        android:imeOptions="actionNext"
                        android:inputType="textPostalAddress"
                        android:maxLength="5"
                        android:nextFocusDown="@id/profileEmail" />

                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/profileFlatError"
                    style="@style/ConfidenceStyle"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/profileEmailLayout"
                    style="@style/TextInputLayoutStyle"
                    android:layout_width="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/profileEmail"
                        style="@style/TextEditStyle"
                        android:hint="@string/profile_email"
                        android:imeOptions="actionDone"
                        android:inputType="textEmailAddress" />

                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/profileEmailError"
                    style="@style/ConfidenceStyle"
                    android:visibility="gone" />

            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/profileWarningSwh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="24dp"
                    android:theme="@style/SwitchTheme"
                    tools:checked="true" />

                <TextView
                    android:id="@+id/profileDemo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/demo_mode"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </FrameLayout>

        </LinearLayout>

    </ScrollView>

    <FrameLayout
        android:id="@+id/profileNextLayout"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <merchant.mokka.widget.StepButtonWidget
            android:id="@+id/profileNextBtn"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:alpha="0.5"
            android:text="@string/profile_next"
            app:step="2"
            app:steps="5" />

    </FrameLayout>

</RelativeLayout>

