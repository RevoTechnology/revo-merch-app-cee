<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="24dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/confirmClient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Bartek Jakub Kowalski"/>

    <View
        android:id="@+id/confirmDividerClient"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/steel"
        android:alpha="0.3"
        app:layout_constraintTop_toBottomOf="@+id/confirmClient"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/confirmClientHint"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginTop="11dp"
        android:gravity="center_horizontal"
        android:textSize="12sp"
        android:textColor="@color/steel"
        android:text="@string/agreement_client_name"
        app:layout_constraintTop_toBottomOf="@+id/confirmDividerClient"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/confirmDivider"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/gradient_divider"
        app:layout_constraintTop_toBottomOf="@+id/confirmClientHint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/confirmSmsHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="@string/confirm_client_hint"
        app:layout_constraintTop_toBottomOf="@+id/confirmDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/confirmCodeLayout"/>

    <LinearLayout
        android:id="@+id/confirmCodeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/confirmSmsHint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/confirmTimerLayout">

        <LinearLayout
            android:id="@+id/confirmCode"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"/>

        <View
            android:id="@+id/confirmCodeDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/steel"
            android:alpha="0.3"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/confirmCodeHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:textColor="@color/steel"
            android:textSize="12sp"
            android:text="@string/confirm_client_confirmation_code"/>

    </LinearLayout>

    <TextView
        android:id="@+id/confirmDemo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="@string/demo_mode"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/confirmCodeLayout"
        app:layout_constraintBottom_toTopOf="@+id/confirmTimerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/confirmTimerLayout"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/confirmKeyboard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/confirmTimerInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="@string/verify_time_info"/>

            <TextView
                android:id="@+id/confirmTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="22sp"
                tools:text="0:29"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/confirmSendCodeAgain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:text="@string/verify_not_code"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:textColor="@color/colorAccent"
                android:text="@string/verify_send_again"
                tools:ignore="RtlHardcoded" />

        </LinearLayout>

    </LinearLayout>

    <merchant.mokka.widget.KeyboardWidget
        android:id="@+id/confirmKeyboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>