<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contractRuScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/contractRuLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@string/font_medium"
            android:text="@string/contract_ru_conditions"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/contract_ru_sum"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/contractRuSum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/steel"
                android:textSize="16sp"
                tools:text="5 000 руб." />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="13sp"
            android:layout_marginEnd="16dp"
            android:alpha="0.3"
            android:background="@color/steel" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/contract_ru_over"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/contractRuOver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/steel"
                android:textSize="16sp"
                tools:text="0 руб." />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="13sp"
            android:layout_marginEnd="16dp"
            android:alpha="0.3"
            android:background="@color/steel"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/contract_ru_pay_count"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/contractRuPayCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/steel"
                android:textSize="16sp"
                tools:text="6" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="13sp"
            android:layout_marginEnd="16dp"
            android:alpha="0.3"
            android:background="@color/steel" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/contract_ru_pay_month"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/contractRuPayMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/steel"
                android:textSize="16sp"
                tools:text="833,34 руб." />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="13sp"
            android:alpha="0.3"
            android:background="@color/steel" />

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@drawable/gradient_divider" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="56dp"
            android:fontFamily="@string/font_medium"
            android:text="@string/contract_ru_conditions_all"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:visibility="gone"
            android:text="@string/contract_ru_conditions_hint"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/contractRuAgreeCheck"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:padding="16dp"
                android:text="@string/contract_ru_conditions_check"
                android:textColor="@color/steel"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/contractOfferButton"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:src="@drawable/ic_chevron_right"
                android:tint="@color/gray" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="13sp"
            android:layout_marginEnd="16dp"
            android:alpha="0.3"
            android:background="@color/steel" />

        <LinearLayout
            android:id="@+id/insuranceContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/contractInfoImage"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_info_outline" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/contract_ru_insurance_title"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:src="@drawable/ic_chevron_right"
                android:tint="@color/gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contractRuCodeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="13sp"
                android:alpha="0.3"
                android:background="@color/steel" />

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@drawable/gradient_divider" />

            <LinearLayout
                android:id="@+id/contractRuCode"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:orientation="horizontal" />

            <View
                android:id="@+id/contractRuCodeDivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:alpha="0.3"
                android:background="@color/steel" />

            <TextView
                android:id="@+id/contractRuCodeHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="20dp"
                android:gravity="center_horizontal"
                android:text="@string/confirm_client_confirmation_code"
                android:textColor="@color/steel"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/contractRuTimerInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/verify_time_info"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/contractRuTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:textSize="22sp"
                    tools:text="0:29" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/contractRuSendCodeAgain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/verify_not_code"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="@string/verify_send_again"
                    android:textAllCaps="true"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp"
                    tools:ignore="RtlHardcoded" />

            </LinearLayout>

            <pl.revo.merchant.widget.KeyboardWidget
                android:id="@+id/contractRuKeyboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>

